
<article class="combos_main-section-article">
   
    <a href="/productos/detalle/<%= product.id %>"><img class="combos_main-section-img" src="../images/productos/<%= product.image %>" alt=""  > </a>

    <br><h2 class="combos_main-section-img-letra"><%= product.name %></h2>
    <div class="combos_main-section-div-letra">
        <h3 class="combos_main-section-img-letra-h3"> precio:    </h3>                    
            <h4 class="combos_main-section-img-letra-h4"> $<%= toThousand((product.price - (product.price * product.discount)/ 100).toFixed(0))%></h4>
            <% if (product.discount) { %>
                <span class="combos_main-section-img-letra-h4-v"><%= product.discount %>OFF</span>
            <% }else{ %><p >
            <%= products.price %>
            </p>
            <% } %>
       
    </div>
    <p class="combos_main-section-img-letra-p"><%= product.description %></p>
    <div class="combos_main-section-div-letra">    
    <h2  href="#" class="buy-now-button">COMPRAR AHORA</h2>
						
    <h2 href="#" class="buy-now-button">AGREGAR AL CARRO</h2>
</div>			

</article>
