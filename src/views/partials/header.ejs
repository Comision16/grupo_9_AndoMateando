<header class="header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-2">
                <a href="/" class="logo">
                    <img class="img-fluid" alt="logo de la marca" src="/../images/logo-web.png">
                </a>
            </div>
            <div class="col-md-8 text-center">
                <div class="buscador__nav">
                    <form class="d-flex" action="/productos/buscar" method="GET">
                        <input class="form-control buscar__header" type="search2" placeholder="Buscar" name="keyword">
                        <button class="btn btn-outline-success buscar__button" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </form>
                </div>
            </div>
            <div class="col-md-2">
                <div class="icons__container">
                    <ul class="list-inline">
                        <li class="list-inline-item dropdown">
                            <a href="#" class="dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="far fa-user"></i>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <% if (locals.userLogin) { %>
                                    <% if (userLogin.role === 1) { %>
                                        <li><a class="dropdown-item" href="/admin">Dashboard</a></li>
                                    <% } %>
                                    <li><a class="dropdown-item" href="/usuarios/perfil">Perfil</a></li>
                                    <li><a class="dropdown-item" href="/usuarios/salir">Salir</a></li>
                                <% } else { %>
                                    <li><a class="dropdown-item" href="/usuarios/ingreso">Ingresar</a></li>
                                    <li><a class="dropdown-item" href="/usuarios/registro">Registrarse</a></li>
                                <% } %>
                            </ul>
                        </li>
                        <li class="list-inline-item position-relative">
                            <a href="/carrito"><i class="fas fa-cart-shopping"></i></a>
                            <span id="cart-total-items" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success">
                                0
                              </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <nav class="nav text-center navbar-expand-lg navbar-light bg-light" style="margin-top: 20px;">
        <div class="container ">
            <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link nav__link" href="/">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav__link" href="/mateartips">#Mateartips</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav__link" href="/productos/todos_productos">Productos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav__link" href="/productos/arma_tu_equipo">Arma Tu Set </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav__link" href="/contacto">Contacto</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

</header>
<script src="/js/product-cart.js"></script>
