<!DOCTYPE html>
<html lang="ES">
<%- include('../partials/head',{ title : 'Perfil' }) %>

  <body>
    <%- include('../partials/header') %>
    <main  class="login-register-container">
      <section class="logo-section-register">
        <img
          src="../images/logo (1).jpg"
          style="width: 350px; height: 350px;"
          class="logo"
        />
      </section>
      <section class="form-section-register">

   
      
            <div class="card-shadow">
              <div class="card-header-register">
                <h4 class="card-title">Perfil de usuario</h4>
              </div>
              <div class="form-check">
                <form action="/usuarios/perfil" class="row" method="POST">
                  <div class="form-check">
                    <label for="name" class="form-label" value="user.name">Nombre</label>
                    <input type="text" name="name"
                      class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>" id="name"
                      value="<%= locals.old && old.name ? old.name : null %>" />
                    <small class="text-danger ms-2">
                      <%= locals.errors && errors.name ? errors.name.msg : null %>
                    </small>
                  </div>
                  <div class="form-check">
                    <label for="surname" class="form-label">Apellido</label>
                    <input type="text" name="surname"
                      class="form-control <%= locals.errors && errors.surname ? 'is-invalid' : null %>" id="surname"
                      value="<%= locals.old && old.surname ? old.surname : null %>" />
                    <small class="text-danger ms-2">
                      <%= locals.errors && errors.surname ? errors.surname.msg : null %>
                    </small>
                  </div>
                  <div class="form-check">
                    <label for="email" class="form-label">Correo electr√≥nico</label>
                    <input type="email" name="email"
                      class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>" id="email"
                      placeholder="name@example.com" value="<%= locals.old && old.email ? old.email : null %>" />
                    <small class="text-danger ms-2">
                      <%= locals.errors && errors.email ? errors.email.msg : null %>
                    </small>
                  </div> 
                  <div class="form-group">
                    <button  class="main-btn">Actualizar</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        
      </section>
        
      
          
      
    </main>
    <%- include('../partials/footer') %>
  </body>

</html>